@model are_den.Models.Project

@{
    ViewBag.Title = "Details";
}

<h2>Detaylar</h2>

<div>

    <hr />

    <!-- Portfolio Item Row -->
    <div class="row">

        <div class="col-md-7">
            <img style="max-width:100%" class="" src="~/img/@Html.DisplayFor(model => model.ProjectImage)" alt="">
        </div>

        <div class="col-md-5">
             
            <h3 class="my-3">Proje Detayları</h3>
            <dl class="dl-horizontal">
                <dt>
                    Proje Adı
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProjectName)
                </dd>

                <dt>
                    Müteahhit Firma
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Contractor)
                </dd>

                <dt>
                    İşveren
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Employer)
                </dd>

                <dt>
                    Sözleşme Tipi
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.AgreementType)
                </dd>

                <dt>
                    Proje Yeri
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Placement)
                </dd>

                <dt>
                    Proje Başlangıcı
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StartDate)
                </dd>

                <dt>
                    Proje Bitişi
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.EndDate)
                </dd>

                <dt>
                    İnşaat Alanı
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Area)
                </dd>

                <dt>
                    Görev Tanımı
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Duty)
                </dd>

                <dt>
                    Görev Süresi
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OperationTime)
                </dd>


             
            </dl>
        </div>

    </div>
    <!-- /.row -->
    <dl class="dl-horizontal">

        <p id="gotoback">
            @Html.ActionLink("Projelere Geri Dön", "Index", "Project", new { @class = "btn btn-primary" })
            <a href="/Home/Index" class="btn btn-primary">Anasayfaya Geri Dön</a>
        </p>
       
    </dl>

    <p>


    </p>
</div>

