
    <div class="section">

        <div class="container">

            <div class="row">

                <div class="col-sm-8">
                    <h3>Bize Ulaşın!</h3>
                  

                    @using (Html.BeginForm())
                    {



                        <div class="row">
                            <div class="form-group col-md-12">
                                <label for="input1">Ad Soyad</label>
                                <input type="text" name="contact_name" class="form-control" id="input1" required>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="input2">E-mail</label>
                                <input type="email" name="contact_email" class="form-control" id="input2" required>
                            </div>
                            <div class="form-group col-md-12">
                                <label for="input3">Telefon Numarası</label>
                                <input type="tel" name="contact_phone" class="form-control" id="input3" required>
                            </div>
                            <div class="clearfix"></div>
                            <div class="form-group col-lg-12">
                                <label for="input4">Mesajınız</label>
                                <textarea name="contact_message" class="form-control" rows="6" id="input4" required></textarea>
                            </div>
                            <div class="form-group col-lg-12">
                                <input type="hidden" name="save" value="contact">
                                <button  type="submit" class="btn btn-primary pull-right">Gönder</button>
                                <div class="clearfix"></div>
                            </div>
                        </div>

                    }
                </div>

                <div class="col-sm-4">
                    <h3>Adres</h3>
                    
                    <p>
                        <i class="fa fa-map-marker"></i> Mahfesığmaz Mah., 79133 Sok., No:12
                        01170 Çukurova - Adana
                    </p>
                    <p><i class="fa fa-phone"></i>  +90 322 235 66 20</p>
                    <p><i class="fa fa-envelope"></i> <a id="mailto" href="mailto:alirizaerden@aredenconstruction.com">alirizaerden@aredenconstruction.com</a></p>
                   
                </div>

            </div><!-- /.row -->

        </div><!-- /.container -->

    </div><!-- /.section -->



  


